{
    "schemaVersion": 1,
    "id": "modid",
    "version": "${version}",

    "name": "Example Mod",
    "description": "This is an example description! Tell everyone what your mod is about!",
    "authors": [
        "Me!"
    ],
    "contact": {
        "homepage": "https://github.com/devproje",
        "sources": "https://github.com/devproje/kotlin-fabric-mod-template"
    },

    "license": "MIT",
    "icon": "assets/modid/icon.png",

    "environment": "*",
    "entrypoints": {
        "main": [
            {
                "adapter": "kotlin",
                "value": "net.fabricmc.example.ExampleMod"
            }
        ]
    },
    "mixins": [
        "modid.mixins.json"
    ],

    "depends": {
        "fabricloader": ">=${loader_version}",
        "fabric-api": "*",
        "minecraft": "~${minecraft_version}",
        "java": ">=17",
        "fabric-language-kotlin": ">=${fabric_kotlin_version}"
    },
    "suggests": {
        "another-mod": "*"
    }
}